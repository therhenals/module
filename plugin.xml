<?xml version='1.0' encoding='utf-8'?>
<plugin id="com.todo1.plugins.FlutterAddToApp" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>FlutterAddToApp</name>
    <js-module name="FlutterAddToApp" src="www/FlutterAddToApp.js">
        <clobbers target="FlutterAddToApp" />
    </js-module>
    <platform name="android">
        <framework src="./src/android/plugin.gradle" custom="true" type="gradleReference" />
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="FlutterAddToApp">
                <param name="android-package" value="com.todo1.plugins.FlutterAddToApp.FlutterAddToApp" />
            </feature>
        </config-file>
        <config-file parent="/manifest/application" target="AndroidManifest.xml">
            <activity android:name="io.flutter.embedding.android.FlutterActivity" android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode" android:hardwareAccelerated="true" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="adjustResize" />
        </config-file>
        <config-file parent="/manifest" target="AndroidManifest.xml">
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
        </config-file>
        <source-file src="src/android/FlutterAddToApp.java" target-dir="src/com/todo1/plugins/FlutterAddToApp" />
        <resource-file src="src/android/album" target="repo" />
    </platform>
</plugin>